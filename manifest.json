{
  "manifest_version": 2,

  "name": "facext",
  "description": "face detection",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "facext.html"
  },

  "background": {
    "scripts": ["clmtrackr.js", "background.js"],
    "persistent": false
  },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "*://*/*",
    "activeTab",
    "storage"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
